<!-- header.ejs -->
   <% 
    const companyName='companyName';
    const user ='User';
   %>
<header>
  <div class="navbar">
    <!-- Company logo/name (customizable) -->
    <div class="logo"><%= companyName || 'MyExchange' %></div>

    <!-- Hamburger menu icon (shown on small screens) -->
    <span class="nav-toggle">&#9776;</span>

    <!-- Navigation links -->
    <ul class="nav-links">
      <li><a href="/">Mainpage</a></li>
      <li><a href="/about">About Us</a></li>
      <% if (user) { %>
        <li><a href="/logout">Logout</a></li>
      <% } else { %>
        <li><a href="/login">Login</a></li>
      <% } %>
    </ul>
  </div>
</header>

<!-- Link to header CSS and JS (adjust paths as needed) -->
<link rel="stylesheet" href="/css/layout.css">
<script src="/js/header.js" defer></script>