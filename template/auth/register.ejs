<body>

<%- include('../layout/header')%>
<!-- Body start here  -->
    
    <form class="authenticate-form" action="/register" method="post" style="height: 600px;">
        <h1 class="">Register</h1>
        
        <input name="email" type="text" placeholder="abc@gmail.com" required/>
        <input name="username" type="text" placeholder="New User Name"/>
        <input name="password" type="password" placeholder="New Password"/>
        <input name="userpwd" type="password" placeholder="Re-enter password"/>
        <input class="sub" type="submit" value="Sign Up"/>
        <!-- 
        <a href='/login/google'><input class="google" type="button" value="Google+"></a> 
        <a href='/login/facebook'><input class="facebook" type="button" value="Facebook"></a>
        -->
        <li><a href="#"><p>Need help with password?</p></a></li>
        <li><a href="/login"><p>Already Have An Account</p></a></li>

    </form>

    <%- include('../layout/footer')%>


    
<!-- javascript -->
<script src="./js/event.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    
        //check passworÄ‘ before submit!
        document.querySelector('.authenticate-form').addEventListener('submit', function(event) {
            const password = document.getElementById('pass').value;
            const confirmPassword = document.getElementById('re-pass').value;
            if (password !== confirmPassword){
                event.preventDefault();
            };
        });

    });
</script>

</body>
