<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify Email</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body>

  <%- include('../layout/header')%>

  <main class="main-content">
    <section class="card auth-card" style="max-width:560px;margin:40px auto;padding:24px;text-align:center;">
      <h2><%= t ? t('auth.verifyEmail') : 'Verify your email' %></h2>
      <p class="subtle"><%= t ? t('auth.enterOtp') : 'Enter the 6-digit code we sent to your email' %></p>

      <form action="/register/otp" method="post" id="otpForm">
        <div class="email-otp-container" style="display:flex;gap:8px;justify-content:center;margin:18px 0;">
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" />
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" disabled />
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" disabled />
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" disabled />
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" disabled />
          <input type="text" class="email-otp-input" pattern="[0-9]" maxlength="1" inputmode="numeric" disabled />
        </div>

        <input type="hidden" class="otp-code-holder" name="otp">
        <div class="btn-row" style="justify-content:center;">
          <button type="submit" name="action" value="verify" id="verifyEmailOTP" class="btn"><%= t ? t('auth.verify') : 'Verify' %></button>
          <button type="submit" name="action" value="resend" class="btn ghost"> <%= t ? t('auth.resend') : 'Resend' %> </button>
        </div>
      </form>
    </section>
  </main>

  <%- include('../layout/footer')%>

  <script src="/js/auth.js" defer></script>
  <script src="/js/main.js" defer></script>

  <script>
    document.addEventListener('DOMContentLoaded', ()=>{
      const inputs = Array.from(document.querySelectorAll('.email-otp-input'));
      function focusNext(i){ if (i+1<inputs.length) inputs[i+1].removeAttribute('disabled'), inputs[i+1].focus(); }
      inputs.forEach((input, idx)=>{
        input.addEventListener('input', ()=>{ if (input.value) focusNext(idx); });
        input.addEventListener('keydown', (e)=>{ if(e.key==='Backspace' && !input.value && idx>0) inputs[idx-1].focus(); });
        input.addEventListener('paste', (e)=>{ e.preventDefault(); const txt = (e.clipboardData||window.clipboardData).getData('text').trim(); txt.split('').slice(0,6).forEach((ch,i)=>{ if(inputs[i]){ inputs[i].value = ch; inputs[i].removeAttribute('disabled'); } }); if(inputs[5]) inputs[5].focus(); });
      });

      document.getElementById('verifyEmailOTP').addEventListener('click', ()=>{
        const code = inputs.map(i=>i.value||'').join('');
        document.querySelector('.otp-code-holder').value = code;
      });
    });
  </script>

</body>
</html>