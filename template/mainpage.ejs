<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>    
    <link rel="stylesheet" href="/css/main.css">

</head>
<body class="home">

  <%- include('./layout/header')%>

    <!-- Hero -->
    <section class="hero">
      <div class="hero-inner">
        <h1><%= t ? t('hero.title') : 'Fast, Secure, Friendly Transfers' %></h1>
        <p class="hero-lead"><%= t ? t('hero.lead') : 'Send money from Canada to Vietnam with transparent rates and fast delivery.' %></p>
        <div class="hero-cta">
          <a href="#exchange" class="btn primary"><%= t ? t('hero.getStarted') : 'Get Started' %></a>
          <a href="#info" class="btn ghost"><%= t ? t('hero.howItWorks') : 'How it works' %></a>
        </div>
      </div>
      <div class="hero-decor"></div>
    </section>

<main class="main-content">
  <div class="grid">
    <!-- Left: Exchange form -->
    <section id="exchange" class="card exchange-form scroll-reveal">
      <h2><%= t ? t('form.sendMoney') : 'Send Money' %></h2>
      <form id="moneyExchangeForm">
  <p class="rate-info"><%- t ? t('misc.currentRate') : 'Current exchange rate: <strong>1 CAD = 18,500 VND</strong>' %></p>

        <div class="form-group">
          <label for="amountFrom"><%= t ? t('form.amountLabel') : 'Amount to Send (CAD):' %></label>
          <input type="number" id="amountFrom" name="amountFrom" placeholder="<%= t ? t('placeholders.enterAmount') : 'Enter amount' %>" min="100" max="10000" step="0.01" required>
        </div>

        <div class="form-group">
          <label for="amountTo"><%= t ? t('form.receiveLabel') : 'Amount to Receive (VND):' %></label>
          <input type="number" id="amountTo" name="amountTo" placeholder="<%= t ? t('placeholders.autoCalculated') : 'Auto-calculated' %>" readonly>
        </div>

        <button type="submit" class="btn primary"><%= t ? t('form.calculate') : 'Calculate & Continue' %></button>
      </form>
    </section>

    <!-- Right: Transfer details -->
    <aside id="info" class="card transfer-details scroll-reveal">
      <h2><%= t ? t('form.transferInfo') : 'Transfer Information' %></h2>
      <form id="transferInfoForm">
        <div class="form-group">
          <label><%= t ? t('labels.userEmail') : 'User Email:' %></label>
          <input type="email" value="<%= user?.email || 'user@example.com' %>" disabled>
        </div>

        <div class="form-group">
          <label><%= t ? t('labels.senderPhone') : 'Sender Phone Number:' %></label>
          <input type="tel" name="senderPhone" placeholder="" required>
        </div>

        <div class="form-group">
          <label><%= t ? t('labels.receiverPhone') : 'Receiver Phone Number:' %></label>
          <input type="tel" name="receiverPhone" placeholder="" required>
        </div>

        <div class="form-group two-col">
          <div>
            <label><%= t ? t('labels.senderBank') : 'Sender Bank:' %></label>
            <select name="senderBank" required>
              <option value="">Select a bank</option>
              <option value="cibc">CIBC</option>
              <option value="rbc">RBC</option>
              <option value="td">TD</option>
              <option value="bmo">BMO</option>
              <option value="scotiabank">Scotiabank</option>
            </select>
          </div>
          <div>
            <label><%= t ? t('labels.accountNumber') : 'Account #' %></label>
            <input type="text" name="senderBankAccount" placeholder="<%= t ? t('placeholders.accountNumber') : 'Account Number' %>" required>
          </div>
        </div>

        <div class="form-group">
          <label><%= t ? t('labels.transferMethod') : 'Transfer Method:' %></label>
          <select name="transferMethod" required>
            <option value="e-transfer">E-Transfer</option>
            <option value="wire">Wire Transfer</option>
          </select>
        </div>

        <div class="form-group two-col">
          <div>
            <label><%= t ? t('labels.receiverBank') : 'Receiver Bank:' %></label>
            <select name="receiverBank" required>
              <option value="">Select a bank</option>
              <option value="vietcombank">Vietcombank</option>
              <option value="agribank">Agribank</option>
              <option value="techcombank">Techcombank</option>
              <option value="mb">MB Bank</option>
              <option value="acb">ACB</option>
              <option value="vietinbank">VietinBank</option>
              <option value="shinhan">Shinhan Bank</option>
            </select>
          </div>
          <div>
            <label><%= t ? t('labels.accountNumber') : 'Account #' %></label>
            <input type="text" name="receiverBankAccount" placeholder="<%= t ? t('placeholders.accountNumber') : 'Account Number' %>" required>
          </div>
        </div>

        <button type="submit" class="btn primary"><%= t ? t('form.confirm') : 'Confirm Transfer' %></button>
      </form>
    </aside>
  </div>

  <!-- Extra sections: features & testimonials -->
  <section class="features scroll-reveal">
    <h3><%= t ? t('features.title') : 'Why choose us' %></h3>
    <div class="features-grid">
      <div class="feature card">
        <h4><%= t ? t('features.lowFees') : 'Low Fees' %></h4>
        <p><%= t ? t('misc.lowFeesDesc') : 'Competitive rates and transparent fees. No hidden charges.' %></p>
      </div>
      <div class="feature card">
        <h4><%= t ? t('features.fast') : 'Fast Delivery' %></h4>
        <p><%= t ? t('misc.fastDesc') : 'Most transfers delivered within 24–48 hours.' %></p>
      </div>
      <div class="feature card">
        <h4><%= t ? t('features.secure') : 'Secure' %></h4>
        <p><%= t ? t('misc.secureDesc') : 'Encrypted transfers and verified partners.' %></p>
      </div>
    </div>
  </section>

  <section class="testimonials scroll-reveal">
    <h3><%= t ? t('testimonials.title') : 'What customers say' %></h3>
    <div class="testimonials-grid">
  <blockquote class="card">"<%= t ? t('testimonials.one') : 'Great service — fast and easy!' %>" <cite>- Speigel Sang</cite></blockquote>
  <blockquote class="card">"<%= t ? t('testimonials.two') : 'Transparent fees and quick confirmation.' %>" <cite>- Tony Lam</cite></blockquote>
  <blockquote class="card">"<%= t ? t('testimonials.three') : 'No fee with good exchange rate better than Remitly!' %>" <cite>- Thuc Van</cite></blockquote>
    </div>
  </section>

</main>


    <%- include('./layout/footer')%>
<script src="/js/main.js" defer></script>
<script type="text/javascript">
    // Scroll Reveal Animation
    const scrollReveal = () => {
        const elements = document.querySelectorAll('.scroll-reveal');
        elements.forEach(element => {
            const elementTop = element.getBoundingClientRect().top;
            const elementVisible = 150;
            
            if (elementTop < window.innerHeight - elementVisible) {
                element.classList.add('active');
            }
        });
    }

    // Initialize scroll reveal on load
    window.addEventListener('load', () => {
        document.querySelectorAll('.product, .service, .outcome div')
                .forEach(el => el.classList.add('scroll-reveal'));
        scrollReveal();
    });

    // Add scroll event listener
    window.addEventListener('scroll', scrollReveal);

    // Smooth scroll for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });

    // Button hover effects
    document.querySelectorAll('button').forEach(button => {
        button.addEventListener('mouseover', () => {
            button.style.transform = 'scale(1.05)';
        });
        
        button.addEventListener('mouseout', () => {
            button.style.transform = 'scale(1)';
        });
    });
</script>




</body>
</html>